            <div class="card">
              <div class="card-body">
                <h2 class="card-title"><%= artigo.titulo%></h2>
                <h6 class="card-subtitle mb-2 text-muted"><%=  artigo.createdAt%></h6>
                
                <p class="card-text"><%=  artigo.descricao%></p>
                <a href="#" class="card-link">Ler Artigo</a>
